<!-- Railsy-er forms with #form_for -->
<%= form_for @user do |f| %>
  <%= f.label :username , "Enter username:" %>
  <%= f.text_field :username %>
  <br />
  <%= f.label :email , "Enter email:" %>
  <%= f.email_field :email, placeholder: "foo@bar.com" %>
  <br />
  <%= f.label :password , "Enter password:" %>
  <%= f.password_field :password %>
  <br />
  <%= f.submit "Create user" %>
<% end %>



